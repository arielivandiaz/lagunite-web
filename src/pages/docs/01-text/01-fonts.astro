---
import Layout from "../../../layouts/Layout.astro";
import ColorDemo from "../../../components/docs/ColorDemo.astro";

const title = "Fonts";
---

<Layout title={title}>
  <section class="w-max center padd">
    <h2>{title}</h2>
    <div class="separator-v-xl"></div>
    <i>@ID:<b> #01-01-04</b></i>
    <h1>Heading 1</h1>
    <h2>Heading 2</h2>
    <h3>Heading 3</h3>
    <h4>Heading 4</h4>
    <h5>Heading 5</h5>

    <div class="separator-v-l"></div><!-- SEP -->
    <div class="color-main ta-c">
      <span class="font-l">Heading Inline</span>
    </div>
    <hgroup>
      <h1>H1</h1>
      <h2>H2</h2>
      <h3>H3</h3>
      <h4>H4</h4>
      <h5>H5</h5>
    </hgroup>

    <div class="separator-v-l"></div><!-- SEP -->
    <h3>Font Transform</h3>
    <i>@ID:<b> #01-01-02</b></i>
    <div class="separator-v-m"></div>
    <p class="bold">Bold text - .bold</p>
    <p class="italic">Italic text - .italic</p>

    <div class="separator-v-l"></div><!-- SEP -->
    <h2>Font Family</h2>
    <i>@ID:<b> #01-01-03</b></i>
    <div class="separator-v-m"></div>
    <p class="font-text">.font-text - Text font family</p>
    <p class="font-headers">.font-headers - Headers font family</p>
    <p class="font-sans">.font-sans - Sans-serif font</p>
    <p class="font-mono">.font-mono - Monospace font</p>

    <div class="separator-v-l"></div><!-- SEP -->
    <h3>Font Size</h3>
    <i>@ID:<b> #01-01-04</b></i>
    <div class="separator-v-m"></div>
    <p class="font-xs">.font-xs - Extra small</p>
    <p class="font-s">.font-s - Small</p>
    <p class="font-l">.font-l - Large</p>
    <p class="font-xl">.font-xl - Extra large</p>
    <p class="font-xxl">.font-xxl - 2X large</p>
    <p class="font-3xl">.font-3xl - 3X large</p>
    <p class="font-250">.font-250 - 250%</p>
    <p class="font-300">.font-300 - 300%</p>
    <p class="font-400">.font-400 - 400%</p>
    <p class="font-500">.font-500 - 500%</p>

    <div class="separator-v-l"></div><!-- SEP -->
    <h3>Font Fluid (Responsive)</h3>
    <i>@ID:<b> #01-01-010</b></i>
    <div class="separator-v-m"></div>
    <p class="font-fluid-xs">.font-fluid-xs - clamp(0.5rem, 1vh, 0.75rem)</p>
    <p class="font-fluid-s">.font-fluid-s - clamp(0.75rem, 1.5vh, 1rem)</p>
    <p class="font-fluid">.font-fluid - clamp(1rem, 2vh, 1.5rem)</p>
    <p class="font-fluid-l">.font-fluid-l - clamp(1.25rem, 3vh, 1.5rem)</p>
    <p class="font-fluid-xl">.font-fluid-xl - clamp(1.5rem, 5vh, 2rem)</p>

    <div class="separator-v-l"></div><!-- SEP -->
    <h3>Font Weight</h3>
    <i>@ID:<b> #01-01-015</b></i>
    <div class="separator-v-m"></div>
    <p class="font-weight-0 font-l">.font-weight-0 - Light</p>
    <p class="font-weight-1 font-l">.font-weight-1 - Normal</p>
    <p class="font-weight-2 font-l">.font-weight-2 - Medium</p>
    <p class="font-weight-3 font-l">.font-weight-3 - Bold</p>
  </section>
</Layout>
