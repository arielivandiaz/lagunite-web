      <div class="separator-v-s"></div>
      <TextDemo text=".color-success" class="color-success" />
      <TextDemo text=".color-warning" class="color-warning" />
      <TextDemo text=".color-error" class="color-error" />
    </div>

    <div class="separator-v-l"></div>
    <div>
      <h3>Gray Scale</h3>
      <i>@ID:<b> #02-01-50</b></i>
