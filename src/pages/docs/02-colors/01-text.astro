---
import Layout from "../../../layouts/Layout.astro";
import TextDemo from "../../../components/docs/TextDemo.astro";

const title = "Text Colors";
---

<Layout title={title}>
  <section class="w-max center padd">
    <h2>{title}</h2>

    <div class="col">
      <div>
        <h3>Main Text Colors</h3>
        <i>@ID:<b> #02-01-01</b></i>
        <div class="separator-v-s"></div>
        <TextDemo text=".color-text" class="color-text" />
        <TextDemo text=".color-text-alt" class="color-text-alt" />
      </div>
      <div class="separator-v-l"></div>
      <div>
        <h3>Primary Text Colors</h3>
        <i>@ID:<b> #02-01-02</b></i>
        <div class="separator-v-s"></div>
        <TextDemo text=".color-primary" class="color-primary" />
        <TextDemo text=".color-primary-light" class="color-primary-light" />
        <TextDemo text=".color-primary-dark" class="color-primary-dark" />
      </div>
      <div class="separator-v-l"></div>
    </div>

    <div class="separator-v-l"></div>
    <div>
      <h3>Secondary Text Colors</h3>
      <i>@ID:<b> #02-01-03</b></i>
      <div class="separator-v-s"></div>
      <TextDemo text=".color-secondary" class="color-secondary" />
      <TextDemo text=".color-secondary-light" class="color-secondary-light" />
      <TextDemo text=".color-secondary-dark" class="color-secondary-dark" />
    </div>

    <div class="separator-v-l"></div>
    <div>
      <h3>Tertiary Text Colors</h3>
      <i>@ID:<b> #02-01-04</b></i>
      <div class="separator-v-s"></div>
      <TextDemo text=".color-tertiary" class="color-tertiary" />
      <TextDemo text=".color-tertiary-light" class="color-tertiary-light" />
      <TextDemo text=".color-tertiary-dark" class="color-tertiary-dark" />
    </div>

    <div class="separator-v-l"></div>
    <div>
      <h3>Neutral / Almost</h3>
      <i>@ID:<b> #02-01-05</b></i>
      <div class="separator-v-s"></div>
      <TextDemo text=".color-almost-black" class="color-almost-black" />
      <TextDemo text=".color-almost-white" class="color-almost-white" />
    </div>

    <div class="separator-v-l"></div>
    <div>
      <h3>Semantic Colors</h3>
