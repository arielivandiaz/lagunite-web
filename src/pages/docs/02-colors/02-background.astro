        <RectangleDemo text=".bg-black" class="bg-black" height="60px" />
        <RectangleDemo text=".bg-ablack" class="bg-ablack" height="60px" />
        <RectangleDemo text=".bg-white" class="bg-white" height="60px" />
        <RectangleDemo text=".bg-awhite" class="bg-awhite" height="60px" />
      </div>

      <div class="separator-v-l"></div>
      <div>
        <h3>Semantic Backgrounds</h3>
        <i>@ID:<b> #02-02-05</b></i>
