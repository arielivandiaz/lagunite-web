    <div class="col">
      <div>
        <h3>Main Background Colors</h3>
        <i>@ID:<b> #02-02-01</b></i>
        <div class="separator-v-s"></div>
        <RectangleDemo text=".bg" class="bg" height="60px" />
        <RectangleDemo text=".bg-alt" class="bg-alt" height="60px" />
      </div>
      <div class="separator-v-l"></div>
      <div>
        <h3>Color Variants (primary / secondary / tertiary)</h3>
        <i>@ID:<b> #02-02-01</b></i>
        <div class="separator-v-s"></div>
        <RectangleDemo text=".bg-1" class="bg-1" height="60px" />
        <RectangleDemo text=".bg-2" class="bg-2" height="60px" />
        <RectangleDemo text=".bg-3" class="bg-3" height="60px" />
        <RectangleDemo text=".bg-4" class="bg-4" height="60px" />
        <RectangleDemo text=".bg-5" class="bg-5" height="60px" />
        <RectangleDemo text=".bg-6" class="bg-6" height="60px" />
        <RectangleDemo text=".bg-7" class="bg-7" height="60px" />
        <RectangleDemo text=".bg-8" class="bg-8" height="60px" />
