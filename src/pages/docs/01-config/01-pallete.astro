---
import Layout from "../../../layouts/Layout.astro";
import ColorDemo from "../../../components/docs/ColorDemo.astro";

const title = "Paleta de colores";
---

<Layout title={title}>
  <section class="w-max center padd">
    <h2>Paleta de colores</h2>
    <div class="separator-v-xl"></div>
    <div class="col-row">
      <div>
        <ColorDemo text="--gray-50: hsl(210, 20%, 95%);" class="bg-gray-50" />
        <ColorDemo text="--gray-100: hsl(210, 18%, 89%);" class="bg-gray-100" />
        <ColorDemo text="--gray-200: hsl(210, 15%, 82%);" class="bg-gray-200" />
        <ColorDemo text="--gray-300: hsl(210, 13%, 70%);" class="bg-gray-300" />
        <ColorDemo text="--gray-400: hsl(210, 11%, 60%);" class="bg-gray-400" />
        <ColorDemo text="--gray-500: hsl(210, 9%, 50%);" class="bg-gray-500" />
        <ColorDemo text="--gray-600: hsl(210, 10%, 40%);" class="bg-gray-600" />
        <ColorDemo text="--gray-700: hsl(210, 12%, 30%);" class="bg-gray-700" />
        <ColorDemo text="--gray-800: hsl(210, 15%, 20%);" class="bg-gray-800" />
        <ColorDemo text="--gray-900: hsl(210, 20%, 10%);" class="bg-gray-900" />
        <ColorDemo text="--gray-950: hsl(210, 25%, 5%);" class="bg-gray-950" />
      </div>
      <div class="dseparator-h-xl xseparator"></div>
      <div>
        <ColorDemo text="--blue-50: hsl(210, 90%, 96%);" class="bg-blue-50" />
        <ColorDemo text="--blue-100: hsl(210, 90%, 90%);" class="bg-blue-100" />
        <ColorDemo text="--blue-200: hsl(210, 90%, 80%);" class="bg-blue-200" />
        <ColorDemo text="--blue-300: hsl(210, 90%, 70%);" class="bg-blue-300" />
        <ColorDemo text="--blue-400: hsl(210, 90%, 60%);" class="bg-blue-400" />
        <ColorDemo text="--blue-500: hsl(210, 90%, 50%);" class="bg-blue-500" />
        <ColorDemo text="--blue-600: hsl(210, 85%, 40%);" class="bg-blue-600" />
        <ColorDemo text="--blue-700: hsl(210, 80%, 30%);" class="bg-blue-700" />
        <ColorDemo text="--blue-800: hsl(210, 80%, 25%);" class="bg-blue-800" />
        <ColorDemo text="--blue-900: hsl(210, 85%, 20%);" class="bg-blue-900" />
        <ColorDemo text="--blue-950: hsl(210, 90%, 15%);" class="bg-blue-950" />
      </div>
    </div>
    <div class="separator-v"></div>
    <div class="col-row">
      <div>
        <ColorDemo text="--green-50: hsl(140, 65%, 96%);" class="bg-green-50" />
        <ColorDemo
          text="--green-100: hsl(140, 65%, 90%);"
          class="bg-green-100"
        />
        <ColorDemo
          text="--green-200: hsl(140, 60%, 80%);"
          class="bg-green-200"
        />
        <ColorDemo
          text="--green-300: hsl(140, 60%, 70%);"
          class="bg-green-300"
        />
        <ColorDemo
          text="--green-400: hsl(140, 60%, 60%);"
          class="bg-green-400"
        />
        <ColorDemo
          text="--green-500: hsl(140, 60%, 45%);"
          class="bg-green-500"
        />
        <ColorDemo
          text="--green-600: hsl(140, 70%, 35%);"
          class="bg-green-600"
        />
        <ColorDemo
          text="--green-700: hsl(140, 75%, 28%);"
          class="bg-green-700"
        />
        <ColorDemo
          text="--green-800: hsl(140, 75%, 20%);"
          class="bg-green-800"
        />
        <ColorDemo
          text="--green-900: hsl(140, 80%, 15%);"
          class="bg-green-900"
        />
        <ColorDemo
          text="--green-950: hsl(140, 85%, 10%);"
          class="bg-green-950"
        />
      </div>
      <div class="dseparator-h-xl xseparator"></div>
      <div>
        <ColorDemo
          text="--yellow-50: hsl(45, 95%, 96%);"
          class="bg-yellow-50"
        />
        <ColorDemo
          text="--yellow-100: hsl(45, 95%, 90%);"
          class="bg-yellow-100"
        />
        <ColorDemo
          text="--yellow-200: hsl(45, 90%, 80%);"
          class="bg-yellow-200"
        />
        <ColorDemo
          text="--yellow-300: hsl(45, 90%, 70%);"
          class="bg-yellow-300"
        />
        <ColorDemo
          text="--yellow-400: hsl(45, 90%, 60%);"
          class="bg-yellow-400"
        />
        <ColorDemo
          text="--yellow-500: hsl(45, 90%, 50%);"
          class="bg-yellow-500"
        />
        <ColorDemo
          text="--yellow-600: hsl(42, 85%, 45%);"
          class="bg-yellow-600"
        />
        <ColorDemo
          text="--yellow-700: hsl(40, 80%, 38%);"
          class="bg-yellow-700"
        />
        <ColorDemo
          text="--yellow-800: hsl(38, 75%, 30%);"
          class="bg-yellow-800"
        />
        <ColorDemo
          text="--yellow-900: hsl(36, 70%, 22%);"
          class="bg-yellow-900"
        />
        <ColorDemo
          text="--yellow-950: hsl(35, 65%, 15%);"
          class="bg-yellow-950"
        />
      </div>
    </div>
    <div class="separator-v"></div>

    <div class="w-50 center">
      <ColorDemo text="--red-50: hsl(0, 85%, 96%);" class="bg-red-50" />
      <ColorDemo text="--red-100: hsl(0, 85%, 90%);" class="bg-red-100" />
      <ColorDemo text="--red-200: hsl(0, 80%, 80%);" class="bg-red-200" />
      <ColorDemo text="--red-300: hsl(0, 80%, 70%);" class="bg-red-300" />
      <ColorDemo text="--red-400: hsl(0, 80%, 60%);" class="bg-red-400" />
      <ColorDemo text="--red-500: hsl(0, 75%, 50%);" class="bg-red-500" />
      <ColorDemo text="--red-600: hsl(0, 70%, 42%);" class="bg-red-600" />
      <ColorDemo text="--red-700: hsl(0, 75%, 35%);" class="bg-red-700" />
      <ColorDemo text="--red-800: hsl(0, 75%, 28%);" class="bg-red-800" />
      <ColorDemo text="--red-900: hsl(0, 80%, 20%);" class="bg-red-900" />
      <ColorDemo text="--red-950: hsl(0, 85%, 15%);" class="bg-red-950" />
    </div>
  </section>
</Layout>
